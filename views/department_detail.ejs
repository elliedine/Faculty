<div class="dashboard-container">
    <div class="page-header">
        <h1><%= department.name %> (<%= department.code %>)</h1>
        <a href="/student" class="btn btn-back">&larr; Back to Departments</a>
    </div>
    <div class="instructors-table-wrapper">
        <table class="instructors-table">
            <thead>
                <tr>
                    <th>Instructor</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <% if (instructors.length === 0) { %>
                <tr>
                    <td colspan="2" class="empty-message">No instructors found in this department.</td>
                </tr>
                <% } else { %>
                <% instructors.forEach(inst => { %>
                <tr>
                    <td><%= inst.full_name %></td>
                    <td>
                        <span class="status-badge status-<%= inst.status.toLowerCase().replace(/ /g, '-') %>">
                            <%= inst.status %>
                        </span>
                    </td>
                </tr>
                <% }) %>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
